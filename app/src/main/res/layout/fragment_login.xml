<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.LoginActivity"
    android:background="#fafafa">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:padding="5dp"
        android:src="@drawable/app_name_2" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:background="#fafafa">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/faculdade_medicina_usp"/>
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/medicina_social"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="#fafafa">

        <TextView
            android:id="@+id/connectedText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Conection"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:layout_gravity="center">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/loginProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_view"
                android:layout_margin="10dp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/nameLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/button_next"
        android:layout_marginTop="20dp"/>

</LinearLayout>
